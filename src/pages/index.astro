<style>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  :root {
    --color-primary: #5e4bb6;
    --color-primary-dark: #4a3c91;
    --color-secondary: #e74c3c;
    --color-bg: #1a1a2e;
    --color-surface: #2d2d44;
    --color-text: #eee;
    --color-text-dim: #aaa;
    --radius: 8px;
    --shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
  }

  body {
    font-family: system-ui, -apple-system, sans-serif;
    background: var(--color-bg);
    color: var(--color-text);
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }

  .app-container {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
  }

  .app-header {
    background: var(--color-surface);
    padding: 1rem 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    box-shadow: var(--shadow);
  }

  .app-header h1 {
    font-size: 1.5rem;
    font-weight: 600;
  }

  .settings-btn {
    background: none;
    border: none;
    color: var(--color-text);
    cursor: pointer;
    padding: 0.5rem;
    border-radius: var(--radius);
    transition: background 0.2s;
  }

  .settings-btn:hover {
    background: rgba(255, 255, 255, 0.1);
  }

  .app-main {
    flex: 1;
    padding: 2rem;
    max-width: 800px;
    margin: 0 auto;
    width: 100%;
  }

  .file-section {
    margin-bottom: 2rem;
  }

  .file-drop-zone {
    background: var(--color-surface);
    border: 2px dashed var(--color-primary);
    border-radius: var(--radius);
    padding: 3rem;
    text-align: center;
    cursor: pointer;
    transition: all 0.3s;
  }

  .file-drop-zone.dragover {
    background: rgba(94, 75, 182, 0.1);
    border-color: var(--color-primary);
  }

  .upload-icon {
    margin-bottom: 1rem;
    opacity: 0.7;
  }

  .file-drop-text {
    color: var(--color-text-dim);
    line-height: 1.6;
  }

  .file-select-btn {
    background: var(--color-primary);
    color: white;
    border: none;
    padding: 0.5rem 1rem;
    border-radius: var(--radius);
    cursor: pointer;
    margin-top: 0.5rem;
    transition: background 0.2s;
  }

  .file-select-btn:hover {
    background: var(--color-primary-dark);
  }

  .file-info {
    background: var(--color-surface);
    padding: 1rem;
    border-radius: var(--radius);
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 1rem;
  }

  .file-clear-btn {
    background: none;
    border: none;
    color: var(--color-text-dim);
    font-size: 1.5rem;
    cursor: pointer;
    width: 32px;
    height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    transition: all 0.2s;
  }

  .file-clear-btn:hover {
    background: rgba(255, 255, 255, 0.1);
    color: var(--color-text);
  }

  .player-section {
    background: var(--color-surface);
    padding: 2rem;
    border-radius: var(--radius);
    box-shadow: var(--shadow);
  }

  .player-controls {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    margin-bottom: 1.5rem;
  }

  .play-btn {
    background: var(--color-primary);
    border: none;
    width: 56px;
    height: 56px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.2s;
    color: white;
  }

  .play-btn:hover {
    background: var(--color-primary-dark);
    transform: scale(1.05);
  }

  .time-display {
    font-variant-numeric: tabular-nums;
    color: var(--color-text-dim);
  }

  .volume-control {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-left: auto;
  }

  .mute-btn {
    background: none;
    border: none;
    color: var(--color-text);
    cursor: pointer;
    padding: 0.5rem;
  }

  .volume-slider {
    width: 100px;
  }

  .progress-container {
    margin-bottom: 2rem;
  }

  .progress-bar {
    background: rgba(255, 255, 255, 0.1);
    height: 6px;
    border-radius: 3px;
    cursor: pointer;
    position: relative;
  }

  .progress-fill {
    background: var(--color-primary);
    height: 100%;
    border-radius: 3px;
    width: 0;
    transition: width 0.1s;
  }

  .loop-controls h3 {
    font-size: 1.1rem;
    margin-bottom: 1rem;
  }

  .loop-slider-container {
    margin-bottom: 1rem;
  }

  .loop-info {
    display: flex;
    justify-content: space-between;
    align-items: center;
    color: var(--color-text-dim);
    font-size: 0.9rem;
  }

  .loop-reset-btn {
    background: rgba(255, 255, 255, 0.1);
    border: none;
    color: var(--color-text);
    padding: 0.25rem 0.75rem;
    border-radius: var(--radius);
    cursor: pointer;
    transition: background 0.2s;
  }

  .loop-reset-btn:hover {
    background: rgba(255, 255, 255, 0.2);
  }

  .app-footer {
    background: var(--color-surface);
    padding: 1rem;
    text-align: center;
    color: var(--color-text-dim);
    font-size: 0.9rem;
  }

  .app-footer a {
    color: var(--color-primary);
    text-decoration: none;
  }

  .app-footer a:hover {
    text-decoration: underline;
  }

  .error-toast {
    position: fixed;
    bottom: 2rem;
    right: 2rem;
    background: var(--color-secondary);
    color: white;
    padding: 1rem 1.5rem;
    border-radius: var(--radius);
    box-shadow: var(--shadow);
    animation: slideIn 0.3s ease-out;
  }

  @keyframes slideIn {
    from {
      transform: translateX(100%);
    }
    to {
      transform: translateX(0);
    }
  }

  /* noUiSlider Custom Styles */
  .noUi-target {
    background: rgba(255, 255, 255, 0.1);
    border: none;
    box-shadow: none;
    height: 8px;
  }

  .noUi-connect {
    background: var(--color-primary);
  }

  .noUi-handle {
    background: white;
    border: none;
    box-shadow: var(--shadow);
    width: 20px;
    height: 20px;
    right: -10px;
    top: -6px;
  }

  .noUi-handle:before,
  .noUi-handle:after {
    display: none;
  }

  .noUi-tooltip {
    background: var(--color-bg);
    color: var(--color-text);
    border: 1px solid var(--color-primary);
    border-radius: var(--radius);
    padding: 0.25rem 0.5rem;
    font-size: 0.85rem;
  }

  /* Responsive */
  @media (max-width: 640px) {
    .app-main {
      padding: 1rem;
    }

    .player-controls {
      flex-wrap: wrap;
    }

    .volume-control {
      width: 100%;
      margin-left: 0;
      margin-top: 1rem;
    }

    .volume-slider {
      flex: 1;
    }
  }
</style>
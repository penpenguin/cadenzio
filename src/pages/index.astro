            <div class="loop-slider-container">
              <div id="loopSlider"></div>
            </div>
            <div class="loop-info">
              <span>開始: <span id="loopStart">0:00</span></span>
              <button class="loop-reset-btn" id="loopResetBtn" type="button">ループ解除</button>
              <span>終了: <span id="loopEnd">0:00</span></span>
            </div>
